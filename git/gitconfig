[core]
    editor = nvim
    pager = "sh -c 'if [ \"${DELTA_THEME_MODE:-}\" = \"dark\" ] || [ \"$(defaults read -g AppleInterfaceStyle 2>/dev/null)\" = \"Dark\" ]; then exec delta --dark --syntax-theme=OneHalfDark; else exec delta --light --syntax-theme=OneHalfLight; fi'"
    quotepath = false
    precomposeunicode = true
    fscache = true
    untrackedCache = true
    autocrlf = input
    ignorecase = false

[interactive]
    diffFilter = "sh -c 'if [ \"${DELTA_THEME_MODE:-}\" = \"dark\" ] || [ \"$(defaults read -g AppleInterfaceStyle 2>/dev/null)\" = \"Dark\" ]; then exec delta --color-only --dark --syntax-theme=OneHalfDark; else exec delta --color-only --light --syntax-theme=OneHalfLight; fi'"

[delta]
    navigate = true
    side-by-side = true
    line-numbers = true
    hyperlinks = true
    keep-plus-minus-markers = false
    features = decorations

[delta "decorations"]
	commit-decoration-style = blue box
	file-decoration-style = blue ul
	hunk-header-decoration-style = cyan box

[merge]
    conflictStyle = zdiff3

[user]
    name = Ivan Kalinichenko

[includeIf "gitdir:~/Dev/Work/"]
    path = ~/.config/git/gitconfig-work

[includeIf "gitdir:~/Dev/Personal/"]
    path = ~/.config/git/gitconfig-personal

[include]
    path = ~/.config/git/gitconfig-local

[pull]
    rebase = false
